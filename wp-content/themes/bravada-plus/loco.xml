<?xml version="1.0" encoding="utf-8"?>
<bundle>
  <domain name="bravada">
    <project>
      <source>
        <exclude>
            <directory>cryout</directory>
            <directory>plus</directory>
            <directory>plus-templates</directory>
            <directory>resources</directory>
			<file>plus-specifics.php</file>
        </exclude>
      </source>
      <target>
        <directory>languages</directory>
      </target>
      <template>
        <file>languages/bravada.pot</file>
      </template>
    </project>
  </domain>
  <domain name="cryout">
    <project name="Framework" slug="cryout">
      <source>
        <directory>cryout</directory>
		<directory>plus</directory>
		<directory>plus-templates</directory>
		<file>plus-specifics.php</file>
		<exclude>
			<directory>cryout/js</directory>
			<directory>cryout/css</directory>
			<directory>plus/resources</directory>
		</exclude>
      </source>
      <target>
        <directory>plus/languages</directory>
      </target>
      <template>
        <file>plus/languages/cryout.pot</file>
      </template>
    </project>
  </domain>
</bundle>
